-->
@model List<string>
@{
    if (Session["Logged"] == null)
    {
        Response.Redirect("~/Logout");
    }
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<html>
<body>
    <div align="center">
        <h1>Your Stats</h1>
        <br /><br />
        @foreach (string stats in Model)
        {
            string[] newStat = stats.Split(',').ToArray();
            int mins = int.Parse(newStat[2]) / 60;
            int hours = mins / 60;
            int days = hours / 24;
            int secs = int.Parse(newStat[2]) % 60;
            <table>
                <tbody>
                    <tr>
                        <td>
                            <h3>Number of Wins: <b>@newStat[0]</b></h3>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3>Number of Losses: <b>@newStat[1]</b></h3>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3>Time Played: <b>@days days @hours hours @mins minutes @secs seconds</b></h3>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3>Total Turns: <b>@newStat[3]</b></h3>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</body>
</html>