    #synapsis:  This view is used to display the high scores to the user. User's can switch
                between the Time highscores and the Turns highscores with a button at the 
                bottom of the page.
-->
@model string[,]
@{
    if (Session["Logged"] == null)
    {
        Response.Redirect("~/Logout");
    }
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<html>
<body>
    <div align="center">
        @if (Session["Page"].ToString() == "time")
        {
            <h1>High Scores (Time)</h1>
        }
        else
        {
            <h1>High Scores (Turns)</h1>
        }

        <br /><br />
        <table>
            <thead>
                <tr>
                    <th style="width:20%;">Username</th>
                    <th style="width:5%;">Time</th>
                    <th style="width:5%;">Turns</th>
                    <th style="width:5%;">Difficulty</th>
                    <th style="width:5%;">Place</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 15; i++)
                {
                    <tr>
                        @for (int j = 0; j < 5; j++)
                        {
                            if (j == 3)
                            {
                                if (int.Parse(Model[i, j]) == 1)
                                {
                                    <td>Easy</td>
                                }
                                else if (int.Parse(Model[i, j]) == 2)
                                {
                                    <td>Medium</td>
                                }
                                else
                                {
                                    <td>Hard</td>
                                }
                            }
                            else
                            {
                                <td>@Model[i, j]</td>
                            }
                        }
                    </tr>
                    if (i == 4 || i == 9)
                    {
                        <tr>
                            <td>
                                <br /><br />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <br /><br />
        <div class="btn-group">
            @if (Session["Page"].ToString() == "time")
            {
                <a class="btn btn-primary" href="~/Scores">Time</a>
                <a class="btn btn-default" href="~/Scores/Turns">Turns</a>
            }
            else
            {
                <a class="btn btn-default" href="~/Scores">Time</a>
                <a class="btn btn-primary" href="~/Scores">Turns</a>
            }

        </div>
    </div>
</body>
</html>